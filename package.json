{
  "name": "automagik-genie",
  "version": "2.4.0-rc.27",
  "description": "Self-evolving AI agent orchestration framework with Model Context Protocol support",
  "main": ".genie/cli/dist/genie.js",
  "bin": {
    "genie": ".genie/cli/dist/genie-cli.js",
    "automagik-genie": "bin/automagik-genie.js",
    "automagik-genie-mcp": "bin/mcp.js",
    "automagik-genie-update": "bin/update.js",
    "automagik-genie-rollback": "bin/rollback.js",
    "automagik-genie-status": "bin/status.js",
    "automagik-genie-cleanup": "bin/cleanup.js",
    "automagik-genie-statusline": "bin/statusline.js"
  },
  "files": [
    ".genie/cli/dist/**/*",
    ".genie/mcp/dist/**/*",
    ".genie/mcp/src/**/*",
    ".genie/agents/**/*.md",
    ".genie/product/**/*.md",
    ".genie/standards/**/*.md",
    ".genie/guides/**/*.md",
    ".genie/templates/**/*.md",
    ".genie/scripts/**/*",
    "bin/automagik-genie.js",
    "bin/mcp.js",
    "bin/update.js",
    "bin/rollback.js",
    "bin/status.js",
    "bin/cleanup.js",
    "bin/statusline.js",
    "genie",
    "README.md",
    "AGENTS.md",
    "CLAUDE.md"
  ],
  "scripts": {
    "build": "pnpm run build:genie && pnpm run build:mcp",
    "build:genie": "tsc -p .genie/cli/tsconfig.json",
    "build:mcp": "tsc -p .genie/mcp/tsconfig.json",
    "start:mcp": "node .genie/mcp/dist/server.js",
    "start:mcp:stdio": "MCP_TRANSPORT=stdio node .genie/mcp/dist/server.js",
    "start:mcp:http": "MCP_TRANSPORT=httpStream node .genie/mcp/dist/server.js",
    "test:genie": "pnpm run build:genie && node tests/genie-cli.test.js && tests/identity-smoke.sh",
    "test:session-service": "pnpm run build:genie && node tests/session-service.test.js",
    "test:all": "pnpm run test:genie && pnpm run test:session-service",
    "bump:patch": "node scripts/bump.js patch",
    "bump:minor": "node scripts/bump.js minor",
    "bump:major": "node scripts/bump.js major",
    "bump:rc": "node scripts/bump.js rc-increment",
    "release:stable": "node scripts/release.js stable",
    "release:branch": "bash scripts/release-branch.sh",
    "status": "node scripts/status.js",
    "postinstall": "node scripts/postinstall.js || true",
    "prepublishOnly": "pnpm run build && pnpm run test:all"
  },
  "keywords": [
    "ai",
    "agent",
    "orchestration",
    "mcp",
    "model-context-protocol",
    "claude",
    "codex",
    "automation",
    "self-evolving"
  ],
  "author": "Automagik Genie Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/automagik-genie/genie.git"
  },
  "bugs": {
    "url": "https://github.com/automagik-genie/genie/issues"
  },
  "homepage": "https://github.com/automagik-genie/genie#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "commander": "^12.1.0",
    "fastmcp": "^3.18.0",
    "gradient-string": "^2.0.2",
    "ink": "^5.0.1",
    "react": "^18.3.1",
    "yaml": "^2.8.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/react": "^18.3.3",
    "js-tiktoken": "^1.0.21",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.12.4+sha512.5ea8b0deed94ed68691c9bad4c955492705c5eeb8a87ef86bc62c74a26b037b08ff9570f108b2e4dbd1dd1a9186fea925e527f141c648e85af45631074680184"
}
