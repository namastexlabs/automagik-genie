{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "outDir": "../../dist/mcp",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "lib": ["ES2020"]
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}
