{
  "name": "automagik-genie-update-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for Automagik Genie NPX update system",
  "scripts": {
    "test": "jest --config=jest.config.js",
    "test:unit": "jest --config=jest.config.js --testPathPattern=unit",
    "test:integration": "jest --config=jest.config.js --testPathPattern=integration",
    "test:cli": "jest --config=jest.config.js --testPathPattern=cli",
    "test:e2e": "jest --config=jest.config.js --testPathPattern=e2e",
    "test:safety": "jest --config=jest.config.js --testPathPattern=safety",
    "test:performance": "jest --config=jest.config.js --testPathPattern=performance",
    "test:backup": "jest --config=jest.config.js --testNamePattern=\"backup|Backup\"",
    "test:merge": "jest --config=jest.config.js --testNamePattern=\"merge|Merge\"",
    "test:rollback": "jest --config=jest.config.js --testNamePattern=\"rollback|Rollback\"",
    "test:coverage": "jest --config=jest.config.js --coverage",
    "test:watch": "jest --config=jest.config.js --watch",
    "test:data-integrity": "jest --config=jest.config.js --testPathPattern=safety/data-integrity",
    "test:atomic": "jest --config=jest.config.js --testPathPattern=safety/atomic-operations",
    "test:recovery": "jest --config=jest.config.js --testPathPattern=safety/rollback-validation",
    "test:verbose": "jest --config=jest.config.js --verbose",
    "test:bail": "jest --config=jest.config.js --bail --verbose"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "colors": "^1.4.0",
    "crypto": "^1.0.1",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.12",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "jest-html-reporters": "^3.1.7",
    "mock-fs": "^5.2.0",
    "supertest": "^6.3.3",
    "tmp": "^0.2.1",
    "yargs": "^17.7.2"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "collectCoverageFrom": [
      "../../lib/update/**/*.js",
      "../../bin/update.js",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "testTimeout": 30000,
    "verbose": true
  }
}
