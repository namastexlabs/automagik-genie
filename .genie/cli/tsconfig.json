{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "jsx": "react-jsx",
    "moduleResolution": "node16",
    "types": ["node"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/lib/forge-executor.ts"
  ]
}
