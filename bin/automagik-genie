#!/usr/bin/env node

const { validateClaude } = require('../lib/claude-cli-check.js');
const { init } = require('../lib/init.js');
const path = require('path');
const { spawn } = require('child_process');

const showHelp = () => {
  console.log('ğŸ§ Automagik Genie - Universal AI Development Companion');
  console.log('');
  console.log('Usage:');
  console.log('  npx automagik-genie init    Initialize Genie in current project');
  console.log('  npx automagik-genie --help  Show this help message');
  console.log('');
  console.log('Requirements:');
  console.log('  - Claude CLI must be installed and authenticated');
  console.log('  - Run in any project directory (any programming language)');
  console.log('');
  console.log('What it does:');
  console.log('  âœ¨ Analyzes your codebase (any language: Go, Rust, Python, JS, etc.)');
  console.log('  ğŸ¤– Creates project-specific AI agents');
  console.log('  ğŸ¯ Provides /wish command for development assistance');
  console.log('  ğŸ”§ Installs optional development workflow hooks');
  console.log('');
  console.log('After initialization:');
  console.log('  /wish "analyze this codebase"');
  console.log('  /wish "add authentication system"');
  console.log('  /wish "fix failing tests"');
  console.log('');
  console.log('Learn more: https://github.com/automagik-genie/automagik-genie');
};

const showPostInitInstructions = () => {
  console.log('ğŸ” The analyzer agent will auto-detect your tech stack');
  console.log('');
  console.log('ğŸ¯ Available commands:');
  console.log('   /wish "add feature X"     - Request new functionality');  
  console.log('   /wish "fix failing tests" - Debug and repair issues');
  console.log('   /wish "optimize performance" - Improve code efficiency');
  console.log('');
  console.log('ğŸ“š Check .claude/hooks/examples/ for optional workflow automation');
  console.log('');
  console.log('Happy coding! ğŸ§âœ¨');
};

const main = async () => {
  const args = process.argv.slice(2);
  
  // Handle help command
  if (args.includes('--help') || args.includes('-h')) {
    showHelp();
    return;
  }
  
  // Handle version command
  if (args.includes('--version') || args.includes('-v')) {
    const packageJson = require('../package.json');
    console.log(packageJson.version);
    return;
  }
  
  // Default to init command
  const command = args[0] || 'init';
  
  if (command !== 'init') {
    console.log('âŒ Unknown command:', command);
    console.log('ğŸ’¡ Run: npx automagik-genie --help');
    process.exit(1);
  }
  
  console.log('ğŸ§ Initializing Automagik Genie...');
  console.log('');
  
  // Check Claude CLI first
  const claudeAvailable = await validateClaude();
  if (!claudeAvailable) {
    process.exit(1);
  }
  
  const targetPath = process.cwd();
  
  try {
    await init(targetPath);
    
    console.log('');
    console.log('âœ¨ Genie successfully initialized!');
    console.log('');
    console.log('ğŸ§ Starting intelligent codebase analysis...');
    console.log('');
    
    // Auto-trigger claude command for immediate analysis
    const claudeProcess = spawn('claude', ['/wish', 'analyze this codebase and provide development recommendations following enterprise patterns'], {
      stdio: 'inherit',
      shell: true,
      cwd: targetPath
    });

    claudeProcess.on('error', (error) => {
      console.log('');
      console.log('âš ï¸  Could not auto-start analysis:');
      if (error.code === 'ENOENT') {
        console.log('   Claude CLI not found in PATH');
        console.log('   Please ensure Claude CLI is installed and authenticated');
      } else {
        console.log(`   ${error.message}`);
      }
      console.log('');
      console.log('ğŸ’¡ Manual analysis: Run the following when ready:');
      console.log('   /wish "analyze this codebase and provide development recommendations"');
      console.log('');
      showPostInitInstructions();
    });

    claudeProcess.on('close', (code) => {
      console.log('');
      if (code === 0) {
        console.log('âœ¨ Analysis complete!');
      } else {
        console.log('ğŸ’¡ Manual analysis available - run when ready:');
        console.log('   /wish "analyze this codebase and provide development recommendations"');
      }
      console.log('');
      showPostInitInstructions();
    });
    
  } catch (error) {
    console.error('âŒ Initialization failed:', error.message);
    console.log('');
    console.log('ğŸ”§ Troubleshooting:');
    console.log('   â€¢ Ensure you have write permissions in this directory');
    console.log('   â€¢ Check that Claude CLI is properly authenticated');
    console.log('   â€¢ Try running: claude auth');
    console.log('');
    process.exit(1);
  }
};

// Handle unhandled errors gracefully
process.on('unhandledRejection', (error) => {
  console.error('âŒ Unexpected error:', error.message);
  process.exit(1);
});

process.on('uncaughtException', (error) => {
  console.error('âŒ Fatal error:', error.message);
  process.exit(1);
});

main();