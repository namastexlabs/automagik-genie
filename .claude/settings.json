{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/minimal-hook.sh",
            "timeout": 5000
          },
          {
            "type": "command", 
            "command": "./.claude/tdd_hook.sh",
            "timeout": 10000
          }
        ]
      }
    ]
  },
  "enableHooks": true,
  "statusLine": {
    "type": "command",
    "command": "node .claude/genie-statusline.js"
  }
}
